#! /bin/bash
# compress, optimize and transform into PDF/A-1b

# dependency : ghostscript (gs), version >= 9.21
# usage      : $ basename input.pdf output.pdf

gs -sDEVICE=pdfwrite -dBATCH -dNOPAUSE -dSAFER -sProcessColorModel=DeviceCMYK -sColorConversionStrategy=UseDeviceIndependentColor \
   -dFIXEDMEDIA -dPDFFitPage \
   -dEmbedAllFonts=true -dPDFA -dPDFACompatibilityPolicy=1 -dDetectDuplicateImages=true -dFastWebView=true -sOutputFile=$2 $1
