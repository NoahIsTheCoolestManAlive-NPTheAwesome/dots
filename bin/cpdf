#! /bin/bash
# compress, optimize and transform into PDF/A-1b

# dependency : ghostscript (gs), version >= 9.19
# usage      : $ cpdf input.pdf output.pdf

gs -sDEVICE=pdfwrite -dBATCH -dNOPAUSE -dSAFER -sProcessColorModel=DeviceRGB -sColorConversionStrategy=UseDeviceIndependentColor \
   -dPDFA -dPDFACompatibilityPolicy=true -dEmbedAllFonts=true -dCompressFonts=true -dDetectDuplicateImages=true -dFastWebView=true -sOutputFile=$2 $1
